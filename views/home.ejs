    <script>
       // Funkcja do generowania losowych danych dla wykresów
        function generateRandomData(numLabels, maxVal) {
            const data = [];
            for (let i = 0; i < numLabels; i++) {
                data.push(Math.floor(Math.random() * maxVal) + 1); // Zakres od 1 do maxVal
            }
            return data;
        }

        // Funkcja do generowania losowych kolorów
        function generateRandomColors(numColors) {
            const colors = [];
            for (let i = 0; i < numColors; i++) {
                colors.push('#' + Math.floor(Math.random() * 16777215).toString(16));
            }
            return colors;
        }

        // Dane dla wykresu wydatków (przykładowe)
        const expensesData = {
            labels: ['Jedzenie', 'Transport', 'Rozrywka', 'Rachunki', 'Inne'],
            datasets: [{
                label: 'Wydatki',
                data: generateRandomData(5, 500),
                backgroundColor: generateRandomColors(5),
                hoverOffset: 4
            }]
        };

        const expensesConfig = {
            type: 'pie',
            data: expensesData,
        };

        const expensesChart = new Chart(
            document.getElementById('expensesChart'),
            expensesConfig
        );


        // Dane dla wykresu przychodów (przykładowe)
        const incomeData = {
            labels: ['Praca', 'Inwestycje', 'Inne'],
            datasets: [{
                label: 'Przychody',
                data: generateRandomData(3, 1000),
                backgroundColor: generateRandomColors(3),
                hoverOffset: 4
            }]
        };

        const incomeConfig = {
            type: 'doughnut',
            data: incomeData,
        };

        const incomeChart = new Chart(
            document.getElementById('incomeChart'),
            incomeConfig
        );



        // Dane dla wykresu podsumowania miesięcznego (przykładowe)
        const monthlySummaryData = {
            labels: ['Bieżący miesiąc'],
            datasets: [
                {
                    label: 'Oszczędności',
                    data: generateRandomData(1, 300)[0],
                    backgroundColor: '#28a745'
                },
                {
                    label: 'Inne wydatki',
                    data: generateRandomData(1, 100)[0],
                    backgroundColor: '#9966ff'
                },
                {
                    label: 'Rachunki',
                    data: generateRandomData(1, 150)[0],
                    backgroundColor: '#4bc0c0'
                },
                {
                    label: 'Rozrywka',
                    data: generateRandomData(1, 200)[0],
                    backgroundColor: '#ffce56'
                },
                {
                    label: 'Transport',
                    data: generateRandomData(1, 250)[0],
                    backgroundColor: '#36a2eb'
                },
                {
                    label: 'Jedzenie',
                    data: generateRandomData(1, 350)[0],
                    backgroundColor: '#ff6384'
                },
                {
                    label: 'Przychody',
                    data: generateRandomData(1, 1500)[0],
                    backgroundColor: 'transparent', // Przychody jako tło
                    borderWidth: 2,
                    borderColor: '#000000'
                }
            ]
        };

        const monthlySummaryConfig = {
            type: 'bar',
            data: monthlySummaryData,
            options: {
                indexAxis: 'y',
                scales: {
                    x: {
                        stacked: true,
                        title: {
                            display: true,
                            text: 'Kwota (PLN)'
                        }
                    },
                    y: {
                        stacked: true,
                        title: {
                            display: true,
                            text: 'Miesiąc'
                        },
                        ticks: {
                            beginAtZero: true
                        }
                    }
                },
                plugins: {
                    legend: {
                        reverse: true
                    }
                }
            }
        };

        const monthlySummaryChart = new Chart(
            document.getElementById('monthlySummaryChart'),
            monthlySummaryConfig
        );


        // Dane dla wykresu bilansu w czasie (przykładowe)
        const balanceData = {
            labels: ['Sty', 'Lut', 'Mar', 'Kwi', 'Maj', 'Cze', 'Lip', 'Sie', 'Wrz', 'Paź', 'Lis', 'Gru'],
            datasets: [{
                label: 'Saldo',
                data: generateRandomData(12, 20000),
                fill: false,
                borderColor: '#007bff',
                tension: 0.4
            }]
        };

        const balanceConfig = {
            type: 'line',
            data: balanceData,
            options: {
                responsive: true,
                scales: {
                    x: {
                        display: true,
                         title: {
                            display: true,
                            text: 'Miesiąc'
                        }
                    },
                    y: {
                        display: true,
                        title: {
                            display: true,
                            text: 'Kwota (PLN)'
                        },
                        beginAtZero: true
                    }
                },
                 plugins: {
                    legend: {
                        display: false,
                    }
                }
            }
        };

        const balanceChart = new Chart(
            document.getElementById('balanceChart'),
            balanceConfig
        );

    </script>


