<div class="row mt-5">
    <div class="col-md-6 m-auto">
        <div class="card card-body bg-secondary text-light">
            <h1 class="text-center mb-3 text-light">Dodaj Nowe Konto</h1>
            <form action="/accounts/add" method="POST">
                <div class="mb-3">
                    <label for="name" class="form-label">Nazwa Konta</label>
                    <input
                        type="text"
                        id="name"
                        name="name"
                        class="form-control"
                        placeholder="Wpisz nazwę konta (np. Moje Główne, Oszczędności)"
                        value="<%= typeof name !== 'undefined' ? name : '' %>"
                        required
                    />
                </div>
                <div class="mb-3">
                    <label for="balance" class="form-label">Początkowe Saldo</label>
                    <input
                        type="number"
                        id="balance"
                        name="balance"
                        class="form-control"
                        step="0.01"
                        placeholder="0.00"
                        value="<%= typeof balance !== 'undefined' ? balance : '0.00' %>"
                        required
                    />
                </div>
                <div class="mb-3">
                    <label for="currency" class="form-label">Waluta</label>
                    <select id="currency" name="currency" class="form-select" required>
                        <option value="PLN" <%= typeof currency !== 'undefined' && currency === 'PLN' ? 'selected' : '' %>>PLN</option>
                        <option value="USD" <%= typeof currency !== 'undefined' && currency === 'USD' ? 'selected' : '' %>>USD</option>
                        <option value="EUR" <%= typeof currency !== 'undefined' && currency === 'EUR' ? 'selected' : '' %>>EUR</option>
                        </select>
                </div>
                <div class="mb-3">
                    <label for="accountNumber" class="form-label">Numer Konta (opcjonalnie)</label>
                    <input
                        type="text"
                        id="accountNumber"
                        name="accountNumber"
                        class="form-control"
                        placeholder="Np. PLXX XXXX XXXX XXXX XXXX XXXX XXXX"
                        value="<%= typeof accountNumber !== 'undefined' ? accountNumber : '' %>"
                    />
                </div>
                <div class="mb-3">
                    <label for="type" class="form-label">Typ Konta</label>
                    <select id="type" name="type" class="form-select" required>
                        <option value="personal" <%= typeof type !== 'undefined' && type === 'personal' ? 'selected' : '' %>>Osobiste</option>
                        <option value="savings" <%= typeof type !== 'undefined' && type === 'savings' ? 'selected' : '' %>>Oszczędnościowe</option>
                        <option value="business" <%= typeof type !== 'undefined' && type === 'business' ? 'selected' : '' %>>Firmowe</option>
                        <option value="other" <%= typeof type !== 'undefined' && type === 'other' ? 'selected' : '' %>>Inne</option>
                    </select>
                </div>
                <div class="mb-3">
                    <label for="description" class="form-label">Opis (opcjonalnie)</label>
                    <textarea
                        id="description"
                        name="description"
                        class="form-control"
                        rows="3"
                        placeholder="Krótki opis konta"
                    ><%= typeof description !== 'undefined' ? description : '' %></textarea>
                </div>
                <div class="d-grid gap-2">
                    <button type="submit" class="btn btn-primary">Dodaj Konto</button>
                    <a href="/accounts" class="btn btn-secondary">Anuluj</a>
                </div>
            </form>
        </div>
    </div>
</div>