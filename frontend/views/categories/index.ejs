<div class="mt-4">
    <h1 class="text-light">Twoje Kategorie Wydatków</h1>
    <p class="lead text-light">Zarządzaj swoimi kategoriami, aby lepiej śledzić wydatki.</p>
    <hr>

    <div class="d-flex justify-content-end mb-3">
        <a href="/categories/add" class="btn btn-success">Dodaj Nową Kategorię</a>
    </div>

    <% if (categories && categories.length > 0) { %>
    <div class="table-responsive">
        <table class="table table-dark table-striped table-hover">
            <thead>
                <tr>
                    <th scope="col">Nazwa</th>
                    <th scope="col">Opis</th>
                    <th scope="col">Kolor</th>
                    <th scope="col">Akcje</th>
                </tr>
            </thead>
            <tbody>
                <% categories.forEach(category => { %>
                <tr>
                    <td><%= category.name %></td>
                    <td><%= category.description || 'Brak opisu' %></td>
                    <td>
                        <% if (category.color) { %>
                            <span style="display: inline-block; width: 20px; height: 20px; background-color: <%= category.color %>; border-radius: 4px; vertical-align: middle;"></span>
                            <%= category.color %>
                        <% } else { %>
                            Brak
                        <% } %>
                    </td>
                    <td>
                        <a href="/categories/edit/<%= category._id %>" class="btn btn-sm btn-warning me-2">Edytuj</a>
                        <form action="/categories/delete/<%= category._id %>" method="POST" class="d-inline" onsubmit="return confirm('Czy na pewno chcesz usunąć tę kategorię?');">
                            <button type="submit" class="btn btn-sm btn-danger">Usuń</button>
                        </form>
                    </td>
                </tr>
                <% }) %>
            </tbody>
        </table>
    </div>
    <% } else { %>
    <div class="alert alert-info text-dark" role="alert">
        Brak zdefiniowanych kategorii. <a href="/categories/add" class="alert-link">Dodaj pierwszą kategorię!</a>
    </div>
    <% } %>
</div>